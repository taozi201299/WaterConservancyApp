<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10dp"
    android:layout_margin="@dimen/_5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10dp"
    >
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/btn_investigation_shape"
            >
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp"
                android:padding="@dimen/_2dp"
                android:text="一般隐患"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_type"
            android:layout_marginLeft="@dimen/_5dp"
            android:singleLine="true"
            android:textColor="@color/title_0"
            android:textSize="@dimen/_16sp"
            android:gravity="center_vertical"
            android:text="@string/add_problem"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_below="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/ll_report_after"
        android:layout_marginTop="@dimen/_9dp">
        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_1"
            android:textSize="@dimen/_14sp"
            android:text="事故单位:"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:textColor="@color/title_1"
            android:singleLine="true"
            android:textSize="@dimen/_14sp"
            android:text="朝阳区双桥水利所"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5dp">
        <TextView
            android:id="@+id/tv_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_1"
            android:textSize="@dimen/_14sp"
            android:text="上报时间:"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:textColor="@color/title_1"
            android:textSize="@dimen/_14sp"
            android:text="2018-8-1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_report_after"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_5dp"
        >
        <Button
            android:id="@+id/btn_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_normal"
            android:textColor="@color/white"
            android:text="补报"/>
    </RelativeLayout>



</RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>