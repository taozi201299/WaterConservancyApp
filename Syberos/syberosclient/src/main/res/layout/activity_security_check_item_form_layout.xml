<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar2_layout" />
    <com.syberos.shuili.view.CustomScrollView
        android:layout_below="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginTop="@dimen/padding_2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/dialog_bg_shape"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_base_info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll__title"
                        android:layout_width="@dimen/_3dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/button_login_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="被检查对象名称"
                        android:layout_marginStart="@dimen/_2dp"
                        android:textColor="@color/button_login_normal"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/gray_bb"
                    android:layout_marginTop="@dimen/_2dp"/>
                <RelativeLayout
                    android:id="@+id/rl_check_info_0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp">
                    <TextView
                        android:id="@+id/tv_check_label_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="企业名称:"/>

                    <TextView
                        android:id="@+id/tv_check_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_check_label_0"
                        android:layout_marginStart="@dimen/padding_20"
                        android:layout_centerVertical="true"
                        android:text= "企业单位"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_check_1"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"
                    android:minHeight="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_5dp">
                    <TextView
                        android:id="@+id/tv_check_label_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="企业法人:"/>

                    <TextView
                        android:id="@+id/tv_check_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_check_label_1"
                        android:layout_marginStart="@dimen/padding_20"
                        android:layout_centerVertical="true"
                        android:text= "水库、农村水电站、於地段、在建功能、勘察设计和水温监测"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_check_2"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"
                    android:minHeight="@dimen/_40dp"
                    android:layout_marginTop="@dimen/_5dp">
                    <TextView
                        android:id="@+id/tv_check_label_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="标准化等级:"/>

                    <TextView
                        android:id="@+id/tc_check_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_check_label_2"
                        android:layout_marginStart="@dimen/padding_20"
                        android:layout_centerVertical="true"
                        android:text= "辖区内所有单位"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_object_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/dialog_bg_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_object_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp">
                    <LinearLayout
                        android:id="@+id/ll_object_title"
                        android:layout_width="@dimen/_3dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/button_login_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_toEndOf="@+id/ll_object_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="培训记录"
                        android:layout_marginStart="@dimen/_2dp"
                        android:textColor="@color/button_login_normal"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/gray_bb"
                    android:layout_marginTop="@dimen/_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_object_container_0"
                    android:divider="@drawable/div_shape"
                    android:showDividers="middle"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_object_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/dialog_bg_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_object_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp">
                    <LinearLayout
                        android:id="@+id/ll_object_title_1"
                        android:layout_width="@dimen/_3dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/button_login_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_toEndOf="@+id/ll_object_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="执法记录"
                        android:layout_marginStart="@dimen/_2dp"
                        android:textColor="@color/button_login_normal"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/gray_bb"
                    android:layout_marginTop="@dimen/_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_object_container_1"
                    android:divider="@drawable/div_shape"
                    android:showDividers="middle"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hidden_object"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/padding_5"
                android:visibility="gone"
                android:background="@drawable/dialog_bg_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_hiddlen_object_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp">
                    <LinearLayout
                        android:id="@+id/ll_hiddlen_object_title"
                        android:layout_width="@dimen/_3dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/button_login_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_toEndOf="@+id/ll_hiddlen_object_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="历史检查情况"
                        android:layout_marginStart="@dimen/_2dp"
                        android:textColor="@color/button_login_normal"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/gray_bb"
                    android:layout_marginTop="@dimen/_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_hidden_object_container"
                    android:divider="@drawable/div_shape"
                    android:showDividers="middle"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.syberos.shuili.view.CustomScrollView>
</RelativeLayout>

