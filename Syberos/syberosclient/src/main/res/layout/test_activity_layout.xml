<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar_layout"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_margin="@dimen/_5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_blue_short_vertical_div"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_line"
            android:layout_marginLeft="@dimen/_6dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_report_ent"
            android:text ="查询条件"/>
            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/_10dp"
                android:background="@drawable/button_login_normal"
                android:text="查询"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"/>

        <com.syberos.shuili.view.EnumView
            android:id="@+id/ev_unit_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:paddingEnd="@dimen/_5dp"
            android:paddingStart="@dimen/_5dp"
            app:enum_title="政区"
            app:enum_detail="全部"
            app:enum_detail_hint="请选择（必选）"
            >
        </com.syberos.shuili.view.EnumView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"/>
        <com.syberos.shuili.view.EnumView
            android:id="@+id/ev_type_liuyu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:paddingEnd="@dimen/_5dp"
            android:paddingStart="@dimen/_5dp"
            app:enum_title="流域"
            app:enum_detail="全部"
            app:enum_detail_hint="请选择（必选）"
            >
        </com.syberos.shuili.view.EnumView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"/>
        <com.syberos.shuili.view.EnumView
            android:id="@+id/ev_type_other"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:paddingEnd="@dimen/_5dp"
            android:paddingStart="@dimen/_5dp"
            app:enum_title="是否有溢洪道:"
            app:enum_detail="全部"
            app:enum_detail_hint="请选择（必选）"
            >
        </com.syberos.shuili.view.EnumView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"/>
        <RelativeLayout
            android:id="@+id/rl_engine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:paddingEnd="@dimen/_5dp"
            android:paddingStart="@dimen/_5dp">

            <TextView
                android:id="@+id/tv_engin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/text_detail_14sp_title0"
                android:text="水库名称" />

            <com.syberos.shuili.view.ClearableEditText.ClearableEditText
                android:id="@+id/ce_engine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_engin_name"
                android:layout_marginLeft="@dimen/_5dp"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:inputType="numberDecimal"
                style="@style/text_detail_14sp_title0"
                android:hint="请输入名称查询" />
        </RelativeLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_margin="@dimen/_5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
    <ImageView
        android:id="@+id/iv_line1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_blue_short_vertical_div"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6dp"
        android:textColor="@color/color_report_ent"
        android:text ="内容列表"/>
    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/engine_pullRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
