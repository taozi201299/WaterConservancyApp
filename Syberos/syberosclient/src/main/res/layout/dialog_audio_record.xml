<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bg_0"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_170dp"
            android:src="@mipmap/bg_round_3" />

        <ImageView
            android:id="@+id/bg_1"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_170dp"
            android:src="@mipmap/bg_round_3" />

        <ImageView
            android:id="@+id/bg_2"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_170dp"
            android:src="@mipmap/bg_round_3" />

        <ImageView
            android:id="@+id/bg_3"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_170dp"
            android:src="@mipmap/bg_round_3" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/record_container"
            android:layout_width="@dimen/_140dp"
            android:layout_height="@dimen/_140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_160dp">

            <com.syberos.shuili.view.RoundProgressBar
                android:id="@+id/rb_percent"
                android:layout_width="@dimen/_130dp"
                android:layout_height="@dimen/_130dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundColor="@color/transparent"
                app:roundProgressColor="@color/C_0fccc2"
                app:roundWidth="4dip" />

            <ImageView
                android:id="@+id/record_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25dp"
                android:background="@drawable/anim_rhythm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请说话"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp"
                app:layout_constraintBottom_toTopOf="@+id/record_time_count"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/record_anim" />

            <TextView
                android:id="@+id/record_time_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/record_title" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>


    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_55dp"
        android:background="@drawable/dialog_btn_ok"
        android:gravity="center"
        android:paddingLeft="@dimen/_55dp"
        android:paddingRight="@dimen/_55dp"
        android:text="我说完了"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
