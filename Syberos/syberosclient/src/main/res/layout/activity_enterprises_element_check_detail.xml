<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_bar"
        layout="@layout/action_bar2_layout" />

    <com.syberos.shuili.view.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/ll_object_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/dialog_bg_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_object_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp">
                    <LinearLayout
                        android:id="@+id/ll_object_title"
                        android:layout_width="@dimen/_3dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/button_login_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_toEndOf="@+id/ll_object_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检测项"
                        android:layout_marginStart="@dimen/_2dp"
                        android:textColor="@color/button_login_normal"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/gray_bb"
                    android:layout_marginTop="@dimen/_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_object_container_0"
                    android:divider="@drawable/div_shape"
                    android:showDividers="middle"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_object_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/dialog_bg_shape"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_object_title_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp">
                    <LinearLayout
                        android:id="@+id/ll_object_title_1"
                        android:layout_width="@dimen/_3dp"
                        android:layout_height="@dimen/_15dp"
                        android:background="@color/button_login_normal"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"/>
                    <TextView
                        android:layout_toEndOf="@+id/ll_object_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可能存在隐患"
                        android:layout_marginStart="@dimen/_2dp"
                        android:textColor="@color/button_login_normal"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:background="@color/gray_bb"
                    android:layout_marginTop="@dimen/_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_object_container_1"
                    android:divider="@drawable/div_shape"
                    android:showDividers="middle"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </com.syberos.shuili.view.CustomScrollView>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@drawable/button_login_normal"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="检查完成"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sp" />

</LinearLayout>