<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_margin="@dimen/_5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_4"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="易燃易爆物品"
            />
            <LinearLayout
                android:id="@+id/ll_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:orientation="horizontal"
                android:padding="@dimen/padding_4">
                <TextView
                    android:id="@+id/tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_bb"
                    android:text="稽查批次:"
                    />
                <TextView
                    android:id="@+id/tv_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_bb"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="朝阳区双桥水利所"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ll_name_label"
                android:padding="@dimen/padding_4">
                <TextView
                    android:id="@+id/tv_content_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_bb"
                    android:text="稽查时间:"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_bb"
                    android:text=""/>
            </LinearLayout>
        <Button
            android:id="@+id/btn_input_problem"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_login_normal"
            android:layout_marginRight="@dimen/_10dp"
            android:textColor="@color/white"
            android:text="问题录入"/>

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>