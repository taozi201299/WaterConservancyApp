<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/pop_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            android:gravity="center"
            android:background="@color/button_login_normal"
            android:text="退回重报原因"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/dialog_bg_shape">

        <com.syberos.shuili.view.CustomEdit
            android:id="@+id/et_content"
            android:layout_width="@dimen/_300dp"
            android:layout_height ="@dimen/_100dp"
            android:gravity="left|top"
            android:layout_margin="@dimen/_10dp"
            android:background="@null"
            android:hint="请输入退回重报原因"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:background="@drawable/cancel_button_selector"
                android:text="取消"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_width="@dimen/_120dp"
                android:layout_height="@dimen/_40dp"
                android:background="@drawable/button_login_normal"
                android:text="确认"
                />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
