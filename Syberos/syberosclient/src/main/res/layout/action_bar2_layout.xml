<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_login_normal"
    android:padding="@dimen/padding_10"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/iv_action_bar2_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/back"
        android:padding="@dimen/_4dp"/>
    <TextView
        android:id="@+id/tv_action_bar2_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        android:text="详情"/>
    <com.syberos.shuili.view.indexListView.ClearEditText
        android:layout_gravity="center_vertical"
        android:id="@+id/clearEditText"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_height="@dimen/_30dp"
        android:background="@drawable/search_border"
        android:drawableRight="@drawable/edittext_clear_btn_selector"
        android:hint="请输入关键字"
        android:padding="5dp"
        android:textColorHint="@color/text_color_hint"
        android:singleLine="true"
        android:textSize="15sp"
        android:imeOptions="actionDone"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/iv_action_bar2_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_10"
        android:src="@mipmap/right"/>
    <ImageView
        android:id="@+id/iv_action_bar2_right_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_10"
        android:visibility="gone"
        android:src="@mipmap/ic_search_grey600_24dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_quitSearch"
        android:padding="12.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_10"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="取消"
        android:textColor="@color/gray"
        />

</LinearLayout>

