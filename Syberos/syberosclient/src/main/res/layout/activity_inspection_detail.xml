<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar2_layout" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"
        android:layout_above="@+id/ll_commit"
        android:layout_margin="@dimen/_6dp"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical">

        <com.syberos.shuili.view.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_margin="@dimen/_6dp"
            >
            <LinearLayout
                android:id="@+id/ll_project_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/_5dp"
                android:paddingStart="@dimen/_5dp">

                <RelativeLayout
                    android:id="@+id/rl_unit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_unit_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所属单位" />

                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_unit_label"
                        android:text="朝阳双桥水利所" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_project"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_project_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="所属工程" />

                    <TextView
                        android:id="@+id/tv_project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_project_label"
                        android:text="朝阳双桥水利所" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_danger_grade"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_danger_grade_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="危险源等级" />

                    <TextView
                        android:id="@+id/tv_danger_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_danger_grade_label"
                        android:text="朝阳双桥水利所" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_lince_note"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_lince_note_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="是否已立牌并公告" />

                    <TextView
                        android:id="@+id/tv_lince_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_lince_note_label"
                        android:text="朝阳双桥水利所" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_super_pers"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_super_pers_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="监管责任人" />

                    <TextView
                        android:id="@+id/tv_super_pers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_super_pers_label"
                        android:text="朝阳双桥水利所" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_super_pers_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_super_pers_phone_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="监管责任人" />

                    <TextView
                        android:id="@+id/tv_super_pers_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_super_pers_phone_label"
                        android:text="朝阳双桥水利所" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />

                <RelativeLayout
                    android:id="@+id/rl_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <com.syberos.shuili.view.AudioEditView
                        android:id="@+id/ae_describe_audio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_50dp"
                        android:paddingTop="@dimen/_15dp"
                        app:view_label="可能造成的危害风险"
                        app:view_labelWidth="@dimen/_60dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_describe_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <com.syberos.shuili.view.AudioEditView
                        android:id="@+id/ae_describe1_audio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_50dp"
                        android:paddingTop="@dimen/_15dp"
                        app:view_label="监控防范措施"
                        app:view_labelWidth="@dimen/_60dp"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />

                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_time_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="上报时间" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_toEndOf="@+id/tv_time_label"
                        android:text="2017-07-21 18:21" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />
                <RelativeLayout
                    android:id="@+id/rl_patrol"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:paddingEnd="@dimen/_5dp"
                    android:paddingStart="@dimen/_5dp">

                    <TextView
                        android:id="@+id/tv_patrol_label"
                        android:layout_width="@dimen/_60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="巡视记录" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:src="@mipmap/icon_label_next" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:background="@color/gray_bb" />

            </LinearLayout>
        </com.syberos.shuili.view.CustomScrollView>

    </LinearLayout>
</RelativeLayout>
