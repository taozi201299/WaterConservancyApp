<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_base_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10dp"
        android:layout_margin="@dimen/_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/_6dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_sub_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_10"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_10"
                android:visibility="gone"
                android:text="2017-07-20" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_returned"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/returned"
            android:textColor="@color/login_page_link_text_color"
            android:textSize="@dimen/_14sp" />
        <TextView
            android:id="@+id/tv_reported"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="已上报"
            android:textColor="@color/login_page_link_text_color"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/tv_repetition"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6dp"
            android:background="@drawable/button_refund_normal"
            android:gravity="center"
            android:text="退回重报"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />
        <TextView
            android:id="@+id/tv_rush"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6dp"
            android:background="@drawable/button_rush_normal"
            android:gravity="center"
            android:text="催报"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />
        <TextView
            android:id="@+id/tv_report"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6dp"
            android:background="@drawable/button_rush_normal"
            android:gravity="center"
            android:text="上报"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />
        <TextView
            android:id="@+id/tv_revoke"
            android:layout_width="@dimen/_60dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_6dp"
            android:background="@drawable/button_rush_normal"
            android:gravity="center"
            android:text="撤销"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>