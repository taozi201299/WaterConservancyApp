<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle"
    app:cardCornerRadius="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@color/div"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginTop="@dimen/_10dp"
            android:drawableLeft="@mipmap/icon_green_short_vertical_div"
            android:drawablePadding="@dimen/_12dp"
            android:text="一般事故"
            android:textColor="@color/text_black_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="事故数量" />

                <TextView
                    android:id="@+id/tv_value_1_1"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="死亡人数" />

                <TextView
                    android:id="@+id/tv_value_1_2"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="重伤人数" />

                <TextView
                    android:id="@+id/tv_value_1_3"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="直接经济损失" />

                <TextView
                    android:id="@+id/tv_value_1_4"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@color/div" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:drawableLeft="@mipmap/icon_green_short_vertical_div"
            android:drawablePadding="@dimen/_12dp"
            android:text="较大事故"
            android:textColor="@color/text_black_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="事故数量" />

                <TextView
                    android:id="@+id/tv_value_2_1"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="死亡人数" />

                <TextView
                    android:id="@+id/tv_value_2_2"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="重伤人数" />

                <TextView
                    android:id="@+id/tv_value_2_3"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="直接经济损失" />

                <TextView
                    android:id="@+id/tv_value_2_4"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5dp"
                android:visibility="gone">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="整改率" />

                <TextView
                    android:id="@+id/tv_had_supervise_value"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>