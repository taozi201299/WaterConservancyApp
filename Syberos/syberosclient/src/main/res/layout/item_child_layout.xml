<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_seletor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_margin="12.5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:src="@mipmap/default_icon"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginTop="@dimen/padding_15"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_ct1"
            android:textSize="15sp"
            />
        <TextView
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_unitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5"
            android:text="dd"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_ct1"
            android:textSize="15sp"
            />
        <TextView
            android:layout_toRightOf="@+id/tv_unitName"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/padding_50"
            android:layout_marginTop="@dimen/padding_5"
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_ct1"
            android:textSize="15sp"
            />
        <View
            android:layout_below="@+id/iv_icon"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/edit_view"
            android:layout_marginRight="12.5dp"
            />
    </RelativeLayout>


</LinearLayout>