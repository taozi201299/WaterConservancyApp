<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.jian_du_zhi_fa.LawEnforcementQueryActivity">

    <!-- 获取焦点 -->
    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/button_login_normal"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <ImageView
            android:id="@+id/iv_action_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10dp"
            android:src="@mipmap/back" />

        <com.syberos.shuili.view.indexListView.ClearEditText
            android:id="@+id/searchClearEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/search_border"
            android:drawableLeft="@mipmap/ic_search_grey600_24dp"
            android:drawableRight="@drawable/edittext_clear_btn_selector"
            android:hint="请输法律法规名称"
            android:imeOptions="actionDone"
            android:padding="5dp"
            android:singleLine="true"
            android:textColorHint="@color/text_color_hint"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_quit_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_10"
            android:gravity="center_vertical"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_normal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_border_shape"
        android:layout_margin="@dimen/_6dp"
        android:orientation="vertical">

        <com.syberos.shuili.view.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </com.syberos.shuili.view.CustomScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_result_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#88000000"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6dp">

            <LinearLayout
                android:id="@+id/ll_plan_title_0"
                android:layout_width="@dimen/_3dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/button_login_normal"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_toEndOf="@+id/ll_plan_title_0"
                android:text="搜素结果"
                android:textColor="@color/button_login_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_2dp"
            android:background="@color/gray_bb" />

        <ListView
            android:id="@+id/search_result_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_bb" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_history_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#88000000"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6dp">

            <LinearLayout
                android:id="@+id/ll_plan_title"
                android:layout_width="@dimen/_3dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/button_login_normal"
                android:orientation="vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_toEndOf="@+id/ll_plan_title"
                android:text="搜素历史"
                android:textColor="@color/button_login_normal" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginTop="@dimen/_2dp"
            android:background="@color/gray_bb" />

        <ListView
            android:id="@+id/search_history_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray_bb" />
    </LinearLayout>
</LinearLayout>