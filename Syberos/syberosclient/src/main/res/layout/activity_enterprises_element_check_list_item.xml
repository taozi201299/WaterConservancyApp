<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Item_Card_Style"
    app:cardCornerRadius="@dimen/_10dp">

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:background="@drawable/white_ripple_bg"
        android:padding="@dimen/_10dp">

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_investigation_shape"
            android:orientation="vertical"
            android:paddingEnd="@dimen/padding_6"
            android:paddingStart="@dimen/padding_6">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_20dp"
                android:gravity="center"
                android:text="一般隐患"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_toEndOf="@+id/ll_type"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="北京721化学品泄漏事故"
            android:textSize="@dimen/text_value_normal_16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/padding_3" />
    </RelativeLayout>
</android.support.v7.widget.CardView>