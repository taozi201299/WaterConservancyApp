<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:AudioEditView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp"
        android:layout_marginTop="@dimen/padding_5"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_supervise"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20dp"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_width="@dimen/_3dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/button_login_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="督办记录"
                android:layout_marginLeft="@dimen/_2dp"
                android:textColor="@color/button_login_normal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_supervise"
            android:layout_marginTop="@dimen/_2dp"/>
        <RelativeLayout
            android:id="@+id/ll_supervise_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp">
            <com.syberos.shuili.view.AudioEditView
                android:id="@+id/ev_supervise_des_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                AudioEditView:view_label="督办原因"
                android:paddingTop="@dimen/_15dp"
                android:minHeight="@dimen/_50dp">
            </com.syberos.shuili.view.AudioEditView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_supervise_describe"
            android:layout_marginTop="@dimen/_2dp"/>

        <RelativeLayout
            android:id="@+id/ll_supervise_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp">
            <TextView
                android:id="@+id/tv_supervise_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="督办时间"/>

            <TextView
                android:id="@+id/tv_supervise_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_supervise_time_label"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_centerVertical="true"
                android:text= "2017-10-10" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
