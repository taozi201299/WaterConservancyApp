<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardViewStyle"
    app:cardCornerRadius="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/SecuritySubTitleStyle"
                    android:background="@mipmap/icon_subject_bg_orange"
                    android:text="隐患" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="未整改隐患" />

                <TextView
                    android:id="@+id/tv_count1_no_rectify"
                    style="@style/TextValueStyle"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="1"

                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="隐患总数量" />

                <TextView
                    android:id="@+id/tv_count2"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:ems="1"
                    android:text="评分" />

                <TextView
                    android:id="@+id/tv_score_hidden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:text="0"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/text_value_big_33sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:drawableLeft="@mipmap/icon_orange_short_vertical_div"
            android:drawablePadding="@dimen/_12dp"
            android:text="一般隐患"
            android:textColor="@color/text_black_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="数量" />

                <TextView
                    android:id="@+id/tv_count3"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="已整改" />

                <TextView
                    android:id="@+id/tv_had_no_rectified_value1"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="未整改" />

                <TextView
                    android:id="@+id/tv_no_rectified_value1"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="逾期未整改" />

                <TextView
                    android:id="@+id/tv_late_value1"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@color/div" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:drawableLeft="@mipmap/icon_orange_short_vertical_div"
            android:drawablePadding="@dimen/_12dp"
            android:text="重大隐患"
            android:textColor="@color/text_black_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="数量" />

                <TextView
                    android:id="@+id/tv_count4"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="已整改" />

                <TextView
                    android:id="@+id/tv_had_rectified_value2"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="未整改" />

                <TextView
                    android:id="@+id/tv_no_rectified_value2"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="逾期未整改" />

                <TextView
                    android:id="@+id/tv_late_value2"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5dp">

                <TextView
                    style="@style/TextSubTitleStyle"
                    android:text="已督办" />

                <TextView
                    android:id="@+id/tv_had_supervise_value"
                    style="@style/TextValueStyle"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="0" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>