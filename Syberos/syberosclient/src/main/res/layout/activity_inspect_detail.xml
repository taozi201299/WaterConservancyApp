<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">
    <include layout="@layout/action_bar2_layout"
        android:id="@+id/action_bar"></include>

    <com.syberos.shuili.view.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="@dimen/padding_2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/Item_Card_Style"
                app:cardCornerRadius="@dimen/_10dp">

                <LinearLayout
                    android:id="@+id/ll_base_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_blue_short_vertical_div"
                        android:drawablePadding="@dimen/_6dp"
                        android:padding="@dimen/_10dp"
                        android:text="稽察组信息"
                        android:textColor="@color/button_login_normal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="@dimen/_2dp"
                        android:background="@color/gray_bb" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="稽查批次"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp" />

                        <TextView
                            android:id="@+id/tv_batch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_10"
                            android:layout_marginStart="@dimen/padding_10"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_40dp"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="稽查时间"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_10"
                            android:layout_marginStart="@dimen/padding_10"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_40dp"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="稽察项目类型"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp"/>

                        <TextView
                            android:id="@+id/tv_projType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_10"
                            android:layout_marginStart="@dimen/padding_10"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_40dp"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="稽察类型"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp" />

                        <TextView
                            android:id="@+id/tv_winsType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_10"
                            android:layout_marginStart="@dimen/padding_10"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_40dp"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:text="" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="特派员"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp"/>

                        <TextView
                            android:id="@+id/tv_special"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_10"
                            android:layout_marginStart="@dimen/padding_10"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_40dp"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:text="杜甫" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="特派员助理"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp" />

                        <TextView
                            android:id="@+id/tv_assistant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/padding_10"
                            android:layout_marginStart="@dimen/padding_10"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/_40dp"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:text="苏轼" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="@dimen/_2dp"
                        android:background="@color/gray_bb" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                style="@style/Item_Card_Style"
                app:cardCornerRadius="@dimen/_10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/icon_blue_short_vertical_div"
                        android:drawablePadding="@dimen/_6dp"
                        android:padding="@dimen/_10dp"
                        android:text="稽察问题统计"
                        android:textColor="@color/button_login_normal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="@dimen/_2dp"
                        android:background="@color/gray_bb" />
                    <RelativeLayout
                        android:id="@+id/rl_prob_count"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_problem_count_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/padding_10"
                            android:layout_centerVertical="true"
                            android:text="问题数量"
                            android:textColor="@color/title_1"
                            android:textSize="@dimen/_14sp"/>

                        <TextView
                            android:id="@+id/tv_problem_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_20dp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/title_0"
                            android:textSize="@dimen/_16sp"
                            android:layout_toLeftOf="@+id/iv_right"
                            android:text= "10" />
                        <ImageView
                            android:id="@+id/iv_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_right"/>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/Item_Card_Style"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10dp">

                <LinearLayout
                    android:id="@+id/ll_check_object"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl__check_object_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2dp"
                            android:layout_toEndOf="@+id/ll_check_object_title"
                            android:drawableLeft="@mipmap/icon_blue_short_vertical_div"
                            android:drawablePadding="@dimen/_6dp"
                            android:text="稽察项目"
                            android:textColor="@color/button_login_normal" />

                        <TextView
                            android:id="@+id/tv_check_object_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_2dp"
                        android:background="@color/gray_bb" />

                    <LinearLayout
                        android:id="@+id/ll_project_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/div_shape"
                        android:orientation="vertical"
                        android:showDividers="middle">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_scale"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:layout_marginStart="@dimen/_10dp"
                        android:background="@color/button_login_normal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="全部"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sp" />

                        <ImageView
                            android:id="@+id/iv_scale_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_6dp"
                            android:src="@mipmap/spread" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/Item_Card_Style"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_10dp">

                <LinearLayout
                    android:id="@+id/ll_hidden_object"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_hiddlen_object_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2dp"
                            android:layout_toEndOf="@+id/ll_check_object_title"
                            android:drawableLeft="@mipmap/icon_blue_short_vertical_div"
                            android:drawablePadding="@dimen/_6dp"
                            android:text="稽察问题"
                            android:textColor="@color/button_login_normal" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:background="@color/gray_bb" />

                    <LinearLayout
                        android:id="@+id/ll_problems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/div_shape"
                        android:orientation="vertical"
                        android:showDividers="middle">

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </com.syberos.shuili.view.CustomScrollView>
</RelativeLayout>
