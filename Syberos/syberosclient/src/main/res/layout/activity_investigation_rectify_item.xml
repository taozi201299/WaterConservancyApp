<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding_5"
    >
    <RelativeLayout
        android:id="@+id/ll_rectify"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:layout_height="@dimen/_40dp">
        <ImageView
            android:id="@+id/iv_dot0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_dot_blue"/>
        <TextView
            android:id="@+id/tv_rectify_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_dot0"
            android:layout_margin="@dimen/_5dp"
            style="@style/text_detail_14sp_title1"
            android:text="一次整改"/>

        <TextView
            android:id="@+id/tv_rectify_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_rectify_label"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_centerVertical="true"
            style="@style/text_detail_14sp_title0"
            android:text= "2017-10-10" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_rectify_member"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:layout_height="@dimen/_40dp">
        <ImageView
            android:id="@+id/iv_dot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/icon_dot_blue"/>
        <TextView
            android:id="@+id/tv_rectify_member_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_dot1"
            android:layout_margin="@dimen/_5dp"
            style="@style/text_detail_14sp_title1"
            android:text="整改人员"/>

        <TextView
            android:id="@+id/tv_rectify_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_rectify_member_label"
            android:layout_marginLeft="@dimen/_10dp"
            style="@style/text_detail_14sp_title0"
            android:layout_centerVertical="true"
            android:text= "李白" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_rectify_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp">
        <ImageView
            android:id="@+id/iv_dot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/icon_dot_blue"/>
        <com.syberos.shuili.view.AudioEditView
            android:id="@+id/ev_rectify_des_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_dot2"
            android:layout_margin="@dimen/_5dp"
            style="@style/text_detail_14sp_title0"
            android:paddingTop="@dimen/_15dp"
            android:minHeight="@dimen/_40dp">
        </com.syberos.shuili.view.AudioEditView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_attachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp">
        <ImageView
            android:id="@+id/iv_dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:src="@mipmap/icon_dot_blue"/>
        <TextView
            android:id="@+id/tv_attach_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_dot3"
            android:layout_marginLeft="@dimen/_5dp"
            style="@style/text_detail_14sp_title1"
            android:layout_centerVertical="true"
            android:text="现场情况"/>
        <com.syberos.shuili.view.MultimediaView
            android:id="@+id/ll_rectify_multimedia"
            android:layout_below="@+id/tv_attach_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40dp">

        </com.syberos.shuili.view.MultimediaView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_accept_member"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_50dp">
        <TextView
            android:id="@+id/tv_accept_member_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验收人员"/>

        <TextView
            android:id="@+id/tv_accept_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_accept_member_label"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_centerVertical="true"
            android:text= "李白" />

    </RelativeLayout>
    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_1dp"
        android:background="@color/gray_bb"
        android:layout_below="@+id/ll_accept_member"
        android:layout_marginTop="@dimen/_2dp"/>

    <RelativeLayout
        android:id="@+id/ll_rectify_opinion_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp">
        <com.syberos.shuili.view.AudioEditView
            android:id="@+id/ev_rectify_opinion_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_15dp"
            android:minHeight="@dimen/_40dp">
        </com.syberos.shuili.view.AudioEditView>
    </RelativeLayout>
    <View
        android:id="@+id/line5"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/gray_bb"
        android:layout_below="@+id/ll_rectify_opinion_describe"
        android:layout_marginTop="@dimen/_2dp"/>

    <RelativeLayout
        android:id="@+id/ll_rectify_opinion_attachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rectify_attach_title"
            android:text="验收现场情况"/>
        <com.syberos.shuili.view.MultimediaView
            android:id="@+id/ll_rectify_opinion_multimedia"
            android:layout_below="@+id/tv_rectify_attach_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40dp">

        </com.syberos.shuili.view.MultimediaView>
    </RelativeLayout>
    <View
        android:id="@+id/line6"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/gray_bb"
        android:layout_below="@+id/ll_attachment"
        android:layout_marginTop="@dimen/_10dp"/>

    <RelativeLayout
        android:id="@+id/ll_rectify_result"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_50dp">
        <TextView
            android:id="@+id/tv_rectify_result_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验收结果"/>

        <TextView
            android:id="@+id/tv_rectify_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_rectify_result_label"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_centerVertical="true"
            android:text= "不通过" />

    </RelativeLayout>


</LinearLayout>
