<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_login_normal"
    android:padding="@dimen/padding_6">

    <ImageView
        android:id="@+id/iv_action_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp"
        android:src="@mipmap/icon_person" />

    <TextView
        android:id="@+id/tv_action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="详情"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16" />

    <ImageView
        android:id="@+id/iv_action_bar_right_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_40dp"
        android:src="@mipmap/icon_loc" />

    <ImageView
        android:id="@+id/iv_action_bar_right_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_scan" />
</RelativeLayout>
