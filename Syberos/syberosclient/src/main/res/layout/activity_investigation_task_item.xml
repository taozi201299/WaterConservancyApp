<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10dp"
    android:layout_margin="@dimen/_5dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/rl_main_layout"
    android:padding="@dimen/_10dp"
    >
    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_investigation_shape"
            >
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="一般隐患"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_type"
            android:layout_marginLeft="@dimen/padding_4"
            android:layout_toLeftOf="@+id/tv_time"
            android:ellipsize="end"
            style="@style/text_detail_14sp_title0"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_alignParentRight="true"
            android:text=""
            android:paddingRight="@dimen/padding_3"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_below="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_4">
        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_detail_14sp_title1"
            android:text="工程名称:"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_detail_14sp_title1"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_below="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/ll_supervise"
        android:padding="@dimen/padding_4">
        <TextView
            android:id="@+id/tv_content_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_bb"
            android:text="隐患描述:"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_bb"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_supervise"
        android:layout_width="@dimen/_80dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignTop="@+id/ll_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10dp"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/btn_supervice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_normal"
            android:textColor="@color/white"
            android:text="督办"/>
    </RelativeLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>