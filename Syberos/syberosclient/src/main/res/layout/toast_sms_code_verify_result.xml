<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black_transparent_88"
    >

    <ImageView
        android:id="@+id/toast_sms_code_verify_result_icon"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_login_sms_verify_failed"
        />

    <TextView
        android:id="@+id/toast_sms_code_verify_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_size_18"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/verify_failed"
        android:layout_marginStart="@dimen/padding_10"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        />

</LinearLayout>