<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:actionBarSize"
            app:collapsedTitleGravity="center"
            app:collapsedTitleTextAppearance="@style/Collapse.Title"
            app:contentScrim="@color/colorAccent"
            app:expandedTitleGravity="center"
            app:expandedTitleMarginTop="@dimen/_120dp"
            app:expandedTitleTextAppearance="@style/Expanded.Title"
            app:layout_scrollFlags="exitUntilCollapsed|scroll"
            app:title="流域"
            app:titleEnabled="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/security_head_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="流域"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    app:layout_collapseMode="pin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.syberos.shuili.view.DialPlateView
                    android:id="@+id/view_dial_plate"
                    android:layout_width="@dimen/_170dp"
                    android:layout_height="@dimen/_170dp"
                    android:layout_marginBottom="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_60dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_grade_time"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--<ImageView-->
                <!--android:id="@+id/view_dial_plate"-->
                <!--android:layout_width="@dimen/_170dp"-->
                <!--android:layout_height="@dimen/_170dp"-->
                <!--android:layout_marginBottom="@dimen/_15dp"-->
                <!--android:layout_marginTop="@dimen/_50dp"-->
                <!--android:src="@mipmap/icon_temp"-->
                <!--app:layout_constraintBottom_toBottomOf="@+id/tv_grade_time"-->
                <!--app:layout_constraintLeft_toLeftOf="parent"-->
                <!---->
                <!--app:layout_constraintRight_toRightOf="parent"-->
                <!--app:layout_constraintTop_toTopOf="parent" />-->
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_30dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="98"
                    android:textColor="@color/white"
                    android:textSize="90sp"
                    app:layout_constraintBottom_toBottomOf="@id/view_dial_plate"
                    app:layout_constraintLeft_toLeftOf="@id/view_dial_plate"
                    app:layout_constraintRight_toRightOf="@id/view_dial_plate"
                    app:layout_constraintTop_toTopOf="@id/view_dial_plate" />

                <TextView
                    android:id="@+id/tv_score_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="安全评分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sp"
                    app:layout_constraintLeft_toLeftOf="@id/view_dial_plate"
                    app:layout_constraintRight_toRightOf="@id/view_dial_plate"
                    app:layout_constraintTop_toBottomOf="@id/tv_score" />

                <TextView
                    android:id="@+id/tv_grade_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_55dp"
                    android:text="评分时间：2018-01-06"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/_12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/icon_blue_short_vertical_div"
                android:drawablePadding="@dimen/_6dp"
                android:text="关键指标"
                android:textColor="@color/blue_c3"
                android:textSize="@dimen/text_sub_title_normal_14sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5dp"
                app:cardCornerRadius="@dimen/_10dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_sub_title_acc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12dp"
                        android:layout_marginStart="@dimen/_12dp"
                        android:layout_marginTop="@dimen/_12dp"
                        android:background="@mipmap/icon_subject_bg_red"
                        android:gravity="center"
                        android:text="事故"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_sub_title_big_15sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_acc_count_title1"
                        style="@style/TextSubTitleStyle"
                        android:layout_marginStart="@dimen/_17dp"
                        android:layout_marginTop="@dimen/_19dp"

                        android:text="数据数量"
                        app:layout_constraintLeft_toRightOf="@+id/tv_sub_title_acc"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="spread" />

                    <TextView
                        android:id="@+id/tv_acc_count1"
                        style="@style/TextValueStyle"

                        android:text="11"
                        app:layout_constraintLeft_toLeftOf="@id/tv_acc_count_title1"
                        app:layout_constraintTop_toBottomOf="@id/tv_acc_count_title1" />

                    <TextView
                        android:id="@+id/tv_sub_title_death"
                        style="@style/TextSubTitleStyle"
                        android:text="死亡人数"
                        app:layout_constraintBottom_toBottomOf="@id/tv_acc_count_title1"
                        app:layout_constraintLeft_toRightOf="@id/tv_acc_count_title1"
                        app:layout_constraintRight_toLeftOf="@id/tv_sub_title_score"
                        app:layout_constraintTop_toTopOf="@id/tv_acc_count_title1" />

                    <TextView
                        android:id="@+id/tv_value_death"
                        style="@style/TextValueStyle"
                        android:text="20"
                        app:layout_constraintLeft_toLeftOf="@id/tv_sub_title_death"
                        app:layout_constraintTop_toBottomOf="@id/tv_sub_title_death" />

                    <TextView
                        android:id="@+id/tv_sub_title_score"
                        style="@style/TextSubTitleStyle"
                        android:ems="1"
                        android:text="评分"
                        app:layout_constraintLeft_toRightOf="@id/tv_sub_title_death"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_sub_title_death" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80"
                        android:textColor="@color/text_black_color"
                        android:textSize="@dimen/text_value_big_33sp"
                        app:layout_constraintBottom_toBottomOf="@id/tv_sub_title_score"
                        app:layout_constraintLeft_toRightOf="@id/tv_sub_title_score"
                        app:layout_constraintTop_toTopOf="@id/tv_sub_title_score" />

                    <View
                        android:id="@+id/div1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginLeft="@dimen/_12dp"
                        android:layout_marginRight="@dimen/_12dp"
                        android:background="@color/div"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_sub_title_acc"
                        android:layout_marginTop="@dimen/_10dp"
                        />
                    <com.github.mikephil.charting.charts.PieChart
                        android:layout_margin="@dimen/_15dp"
                        android:id="@+id/pie_char"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140dp"
                        app:layout_constraintTop_toBottomOf="@id/div1"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>