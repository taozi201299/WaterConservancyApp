<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_shape"
    android:layout_margin="@dimen/_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/white_ripple_bg"
        android:orientation="horizontal"
        android:padding="@dimen/_5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_4">

                <TextView
                    android:id="@+id/tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查时间:"
                    android:textColor="@color/gray_bb" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京朝阳区水务局"
                    android:textColor="@color/gray_bb" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_4">

                <TextView
                    android:id="@+id/tv_content_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查内容:"
                    android:textColor="@color/gray_bb" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京朝阳区水务局"
                    android:textColor="@color/gray_bb" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_6dp"
            android:background="@drawable/button_login_normal"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="检查"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sp" />


    </LinearLayout>
</LinearLayout>