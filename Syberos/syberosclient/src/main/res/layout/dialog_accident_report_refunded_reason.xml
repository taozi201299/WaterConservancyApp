<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/pop_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp">

            <com.syberos.shuili.view.AudioEditView
                android:id="@+id/ae_describe_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_150dp"
                android:paddingTop="@dimen/_15dp"
                app:view_label="撤回原因"
                app:view_labelWidth="@dimen/_60dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button_bg_selector"
                android:text="取消"
                />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/_150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@drawable/login_button_bg_selector"
                android:text="确认"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
