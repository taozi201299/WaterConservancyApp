<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:AudioEditView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        app:cardCornerRadius="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:src="@mipmap/icon_blue_short_vertical_div" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6dp"
                android:text="整改方案"
                android:textColor="@color/color_report_ent" />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/gray_bb" />

            <RelativeLayout
                android:id="@+id/ll_unit_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">

                <ImageView
                    android:id="@+id/iv_dot0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue" />

                <TextView
                    android:id="@+id/tv_unit_name_label"
                    style="@style/text_detail_14sp_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@+id/iv_dot0"
                    android:text="治理责任单位" />

                <TextView
                    android:id="@+id/tv_unit_name"
                    style="@style/text_detail_14sp_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/tv_unit_name_label"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rect_leg_pers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">

                <ImageView
                    android:id="@+id/iv_dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue" />

                <TextView
                    android:id="@+id/tv_rect_leg_per_label"
                    style="@style/text_detail_14sp_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@id/iv_dot1"
                    android:text="整改责任人" />

                <TextView
                    android:id="@+id/tv_rect_leg_per"
                    style="@style/text_detail_14sp_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/tv_rect_leg_per_label"
                    android:text="" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_rect_leg_pers_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">

                <ImageView
                    android:id="@+id/iv_dot_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue" />

                <TextView
                    android:id="@+id/tv_rect_leg_per_phone_label"
                    style="@style/text_detail_14sp_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@id/iv_dot_phone"
                    android:text="整改责任人电话" />

                <TextView
                    android:id="@+id/tv_rect_leg_per_phone"
                    style="@style/text_detail_14sp_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/tv_rect_leg_per_phone_label"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_rectify_person"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">

                <ImageView
                    android:id="@+id/iv_dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue" />

                <TextView
                    android:id="@+id/tv_rectify_person_label"
                    style="@style/text_detail_14sp_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@+id/iv_dot2"
                    android:text="要求完成整改日期" />

                <TextView
                    android:id="@+id/tv_rectify_plan_time"
                    style="@style/text_detail_14sp_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/tv_rectify_person_label"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_rectify_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">

                <ImageView
                    android:id="@+id/iv_dot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue" />

                <com.syberos.shuili.view.AudioEditView
                    android:id="@+id/ev_rectify_target_audio"
                    android:layout_centerVertical="true"
                    style="@style/text_detail_14sp_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@+id/iv_dot3"
                    android:minHeight="@dimen/_40dp"
                    android:paddingTop="@dimen/_15dp"
                    AudioEditView:view_label="治理目标任务"></com.syberos.shuili.view.AudioEditView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_rectify_emergency_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">

                <ImageView
                    android:id="@+id/iv_dot4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue" />

                <com.syberos.shuili.view.AudioEditView
                    android:id="@+id/ev_rectify_emergency_plan_audio"
                    android:layout_centerVertical="true"
                    style="@style/text_detail_14sp_title0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toRightOf="@+id/iv_dot4"
                    android:minHeight="@dimen/_50dp"
                    android:paddingTop="@dimen/_15dp"
                    AudioEditView:view_label="安全措施应急预案"></com.syberos.shuili.view.AudioEditView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ll_rectify_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp">
                <ImageView
                    android:id="@+id/iv_dot5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_dot_blue"/>

                <com.syberos.shuili.view.AudioEditView
                    android:id="@+id/ev_ll_rectify_describe_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:minHeight="@dimen/_50dp"
                    android:paddingTop="@dimen/_15dp"
                    android:layout_toRightOf="@+id/iv_dot5"
                    android:layout_marginLeft="@dimen/_5dp"
                    style="@style/text_detail_14sp_title0"
                    AudioEditView:view_label="整改措施概述"></com.syberos.shuili.view.AudioEditView>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
