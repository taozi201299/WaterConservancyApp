<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:AudioEditView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp"
        android:layout_marginTop="@dimen/padding_5"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_rectify_plan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20dp"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_width="@dimen/_3dp"
                android:layout_height="@dimen/_15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/button_login_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整改方案"
                android:layout_marginLeft="@dimen/_2dp"
                android:textColor="@color/button_login_normal"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_rectify_plan"
            android:layout_marginTop="@dimen/_2dp"/>

        <RelativeLayout
            android:id="@+id/ll_unit_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp">
            <TextView
                android:id="@+id/tv_unit_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="治理责任单位"/>

            <TextView
                android:id="@+id/tv_unit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_unit_name_label"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_centerVertical="true"
                android:text= "海淀区二李庄水利所" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_unit_name"
            android:layout_marginTop="@dimen/_2dp"/>
        <RelativeLayout
            android:id="@+id/rl_rect_leg_pers"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp">
            <TextView
                android:id="@+id/tv_rect_leg_per_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="整改责任人"/>

            <TextView
                android:id="@+id/tv_rect_leg_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_rect_leg_per_label"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_centerVertical="true"
                android:text= "海淀区二李庄水利所" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_unit_name"
            android:layout_marginTop="@dimen/_2dp"/>
        <RelativeLayout
            android:id="@+id/ll_rectify_person"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp">
            <TextView
                android:id="@+id/tv_rectify_person_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="要求完成整改日期"/>

            <TextView
                android:id="@+id/tv_rectify_plan_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_rectify_person_label"
                android:layout_marginLeft="@dimen/padding_20"
                android:layout_centerVertical="true"
                android:text= "2017-12-10" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_rectify_person"
            android:layout_marginTop="@dimen/_2dp"/>

        <RelativeLayout
            android:id="@+id/ll_rectify_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp">
            <com.syberos.shuili.view.AudioEditView
                android:id="@+id/ev_rectify_target_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15dp"
                AudioEditView:view_label ="治理目标任务"
                android:minHeight="@dimen/_40dp">
            </com.syberos.shuili.view.AudioEditView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_rectify_target"
            android:layout_marginTop="@dimen/_2dp"/>

        <RelativeLayout
            android:id="@+id/ll_rectify_emergency_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp">
            <com.syberos.shuili.view.AudioEditView
                android:id="@+id/ev_rectify_emergency_plan_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                AudioEditView:view_label ="安全措施应急预案"
                android:paddingTop="@dimen/_15dp"
                android:minHeight="@dimen/_50dp">
            </com.syberos.shuili.view.AudioEditView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/gray_bb"
            android:layout_below="@+id/ll_rectify_emergency_plan"
            android:layout_marginTop="@dimen/_2dp"/>


        <RelativeLayout
            android:id="@+id/ll_rectify_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp">
            <com.syberos.shuili.view.AudioEditView
                android:id="@+id/ev_ll_rectify_describe_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15dp"
                AudioEditView:view_label ="整改措施概述"
                android:minHeight="@dimen/_50dp">
            </com.syberos.shuili.view.AudioEditView>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
