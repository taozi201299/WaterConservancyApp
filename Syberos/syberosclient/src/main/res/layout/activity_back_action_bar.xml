<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/button_login_normal"
    android:padding="@dimen/padding_10"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_action_bar_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_button_back"
        android:layout_marginStart="@dimen/padding_8"/>

    <TextView
        android:id="@+id/tv_action_bar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_edit_text_size"
        android:layout_marginStart="@dimen/padding_8"
        />

    <TextView
        android:id="@+id/tv_action_bar_editStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_personal_center_item_size"
        android:textColor="@color/action_bar_text_clickable_color"
        android:layout_marginStart="@dimen/padding_8"
        android:layout_marginEnd="@dimen/padding_8"
        />
</LinearLayout>